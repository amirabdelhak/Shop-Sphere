@model List<Product>

<h2>Your Cart</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    var cartQuantities = ViewBag.CartQuantities as Dictionary<int, int> ?? new Dictionary<int, int>();
    
    <div class="cart-container">
        @foreach (var product in Model)
        {
            var qty = cartQuantities.GetValueOrDefault(product.Id, 1);
            var itemTotal = product.Priceafterdiscount * qty;
            
            <div class="cart-item">
                <div class="cart-image">
                    <img src="~/image/@product.ImageName" alt="@product.Name" />
                </div>
                <div class="cart-details">
                    <h5>@product.Name</h5>
                    <p>Price: @product.Priceafterdiscount EGP</p>
                    <p class="text-muted">Available: @product.Quantity in stock</p>
                </div>
                <div class="cart-quantity">
                    <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="quantity-form">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <div class="quantity-controls">
                            <button type="submit" name="quantity" value="@(qty - 1)" class="btn btn-outline-secondary btn-sm">−</button>
                            <span class="quantity-value">@qty</span>
                            <button type="submit" name="quantity" value="@(qty + 1)" class="btn btn-outline-secondary btn-sm" 
                                    @(qty >= product.Quantity ? "disabled" : "")>+</button>
                        </div>
                    </form>
                    <p class="item-total">@itemTotal.ToString("N2") EGP</p>
                </div>
                <div class="cart-actions">
                    <a href="@Url.Action("getproduct", "Products", new { productid = product.Id })" class="btn btn-primary btn-sm">
                        View Product
                    </a>
                    <form asp-action="RemoveFromCart" asp-controller="Cart" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Remove
                        </button>
                    </form>
                </div>
            </div>
        }

        <div class="cart-summary">
            <h4>Total: @(((decimal)ViewBag.TotalPrice).ToString("N2")) EGP</h4>

            <div class="summary-buttons">
                <form asp-action="EmptyCart" asp-controller="Cart" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-warning">Empty Cart</button>
                </form>

                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">
                    Buy Now
                </a>
            </div>
        </div>
    </div>
}

<style>
    .cart-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 20px;
    }

    .cart-item {
        display: flex;
        align-items: center;
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .cart-image img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
    }

    .cart-details {
        flex-grow: 1;
        margin-left: 20px;
    }

    .cart-quantity {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-right: 20px;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .quantity-value {
        font-size: 1.2em;
        font-weight: bold;
        min-width: 30px;
        text-align: center;
    }

    .item-total {
        margin-top: 5px;
        font-weight: bold;
        color: #28a745;
    }

    .cart-actions {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .cart-actions a,
    .cart-actions button {
        width: 120px;
    }

    .cart-summary {
        margin-top: 30px;
        padding: 20px;
        background-color: #eef2f7;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .summary-buttons {
        margin-top: 15px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }
</style>
