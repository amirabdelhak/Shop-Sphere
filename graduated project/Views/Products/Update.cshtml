@model graduated_project.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_loginlayout";
    SelectList x = new SelectList(ViewBag.categorys, "Id", "Name");
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Product</h2>

    <form asp-action="Update" asp-controller="Products" method="post">
        

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Pricebeforediscount" class="form-label">Price Before Discount</label>
                <input asp-for="Pricebeforediscount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Pricebeforediscount" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Discount" class="form-label">Discount (%)</label>
                <input asp-for="Discount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Price After Discount</label>
                <input type="text" class="form-control" id="priceAfterDiscount" readonly style="background-color: #f0f0f0; cursor: not-allowed;" />
            </div>

            

            <div class="col-md-12 mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select" asp-items="x">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        </div>

        <button type="submit" class="btn btn-success mt-3"><i class="bi bi-save"></i> Save Changes</button>
        <a asp-action="getproducts" class="btn btn-secondary mt-3 ms-2">Cancel</a>
    </form>
</div>

<script>
    function updatePriceAfterDiscount() {
        const priceInput = document.querySelector('input[asp-for="Pricebeforediscount"]');
        const discountInput = document.querySelector('input[asp-for="Discount"]');
        const priceAfterDiscountInput = document.getElementById('priceAfterDiscount');

        const price = parseFloat(priceInput.value) || 0;
        const discount = parseFloat(discountInput.value) || 0;

        const finalPrice = discount > 0 ? price * (1 - discount / 100) : price;
        priceAfterDiscountInput.value = finalPrice.toFixed(2);
    }

    document.querySelector('input[asp-for="Pricebeforediscount"]').addEventListener('input', updatePriceAfterDiscount);
    document.querySelector('input[asp-for="Discount"]').addEventListener('input', updatePriceAfterDiscount);
    
    // حساب السعر عند تحميل الصفحة
    updatePriceAfterDiscount();
</script>
